<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Normal 2x2 -->

	<Operation Class="PatchOperationAdd">
	<xpath>Defs</xpath>
	<value>
		<ThingDef ParentName="Eccentric_DefenseGridBuildingBase">
		<defName>Eccentric_ShieldProjector2x2</defName>
		<label>Shield Projector(2x2)</label>
		<description>A shield projector designed to be linked together to provide protection for a wide area.\n\nShield projectors do not need to be directly powered, but must be connected to a defense grid network with an active shield generator and shield capacitors to function. Intercepting incoming projectiles will also generate a great deal of heat which must be dissipated in heatsinks.</description>
		<drawerType>MapMeshAndRealTime</drawerType>
		<tickerType>Normal</tickerType>
		<graphicData>
		  <texPath>Eccentric/Things/Buildings/ShieldProjector_Base</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		  <drawSize>(3,3)</drawSize>
		  <shadowData>
			<volume>(1.93,1,1.69)</volume>
			<offset>(-0.03,0,-0.1)</offset>
		  </shadowData>
		</graphicData>
		<uiIconPath>Eccentric/Things/Buildings/ShieldProjector_UI</uiIconPath>
		<uiIconScale>1.5</uiIconScale>
		<statBases>
		  <MaxHitPoints>300</MaxHitPoints>
		  <WorkToBuild>2500</WorkToBuild>
		  <Flammability>0.5</Flammability>
		</statBases>
		<size>(2,2)</size>
		<costList>
		  <Steel>50</Steel>
		  <Plasteel>20</Plasteel>
		  <Gold>1</Gold>
		  <ComponentSpacer>1</ComponentSpacer>
		</costList>
		<comps>
		  <li Class="CompProperties_Glower">
			<glowRadius>4</glowRadius>
			<glowColor>(159,248,255,0)</glowColor>
		  </li>
		  <li Class="EccentricDefenseGrid.CompProperties_DefenseConduit" />
		  <li Class="EccentricDefenseGrid.CompProperties_DefenseProjector">
			<radius>20.9</radius>
			<radiusRange>8~20</radiusRange>
			<adjustableRadius>true</adjustableRadius>
			<interceptsDirectProjectiles>true</interceptsDirectProjectiles>
			<interceptsOverheadProjectiles>true</interceptsOverheadProjectiles>
			<interceptsExplosiveProjectiles>true</interceptsExplosiveProjectiles>
			<interceptsNonExplosiveProjectiles>true</interceptsNonExplosiveProjectiles>

			<fieldTexturePath>Eccentric/Effects/ShieldBubbleWhite-512x512</fieldTexturePath>
			<fieldShader>TransparentPostLight</fieldShader>
			<fieldDrawSizeFactor>1.015873</fieldDrawSizeFactor>
			<defaultColor>(159,248,255,38)</defaultColor>

			<startupSound>Eccentric_DefenseGridShieldStartup</startupSound>
			<interceptSound>Eccentric_DefenseGridShieldHit</interceptSound>
			<shutdownSound>Eccentric_DefenseGridShieldBreak</shutdownSound>
			<startupEffects>
			  <li>Eccentric_ShieldBubbleStartPulse</li>
			  <li>Eccentric_ShieldBubbleStartRing</li>
			</startupEffects>
			<shutdownEffects>
			  <li>Eccentric_ShieldBubble_BreakPulse</li>
			  <li>Eccentric_ShieldBubble_BreakDrifters</li>
			</shutdownEffects>
			<interceptEffectDrawOffset>(0,0,0.3)</interceptEffectDrawOffset>
			<interceptEffectRotatedDrawOffset>(0,0,0.7)</interceptEffectRotatedDrawOffset>
			<interceptEffects>
			  <li>Eccentric_ShieldInterceptFlashBase</li>
			  <li>Eccentric_ShieldInterceptFlashCore</li>
			  <li>Eccentric_ShieldInterceptTrailBase</li>
			  <li>Eccentric_ShieldInterceptTrailCore</li>
			  <li>Eccentric_ShieldInterceptPulseBase</li>
			  <li>Eccentric_ShieldInterceptPulseCore</li>
			</interceptEffects>
		  </li>
		  <li Class="EccentricDefenseGrid.CompProperties_ProjectorOverlay">
			<baseRingPath>Eccentric/Things/Buildings/ShieldProjector_Ring</baseRingPath>
			<activeRingPath>Eccentric/Things/Buildings/ShieldProjector_RingWhite</activeRingPath>
			<activeRingGlowPath>Eccentric/Things/Buildings/ShieldProjector_RingGlow</activeRingGlowPath>
			<glowRingPath>Eccentric/Things/Buildings/ShieldProjector_Glow</glowRingPath>
			<casingPath>Eccentric/Things/Buildings/ShieldProjector_Shell</casingPath>
			<pylonPath>Eccentric/Things/Buildings/ShieldProjector_Pylon</pylonPath>
			<overlayDrawOffset>(0,0,0.3)</overlayDrawOffset>
			<overlayDrawSize>(2,0,2)</overlayDrawSize>
		  </li>
		</comps>
		<placeWorkers>
		  <li>EccentricDefenseGrid.PlaceWorker_DefenseProjector</li>
		</placeWorkers>
		<researchPrerequisites>
		  <li>Eccentric_DefenseGridShields</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
		</ThingDef>
	 </value> 
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Eccentric_ShieldProjector"]/label</xpath>
    <value>
      <label>Shield Projector(1x1)</label>
    </value>
  </Operation>

<!-- Wide 3x3 -->
	
	<Operation Class="PatchOperationAdd">
	<xpath>Defs</xpath>
	<value>
		<ThingDef ParentName="Eccentric_DefenseGridBuildingBase">
		<defName>Eccentric_ShieldProjector3x3Wide</defName>
