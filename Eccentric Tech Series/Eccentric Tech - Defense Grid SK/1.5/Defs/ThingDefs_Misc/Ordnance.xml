<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- base ordnance -->
  <ThingDef Name="EccentricDefenseGrid_BaseOrdnance" ParentName="ResourceBase" Class="EccentricDefenseGrid.OrdnanceDef" Abstract="True">
    <thingClass>EccentricDefenseGrid.Ordnance</thingClass>
    <tickerType>Normal</tickerType>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.2</drawSize>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>5</stackLimit>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>800</MarketValue>
      <Mass>500.0</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>5.0</DeteriorationRate>
    </statBases>
    <ordnance>
      <targetParams>
        <canTargetSelf>false</canTargetSelf>
        <canTargetPawns>false</canTargetPawns>
        <canTargetBuildings>true</canTargetBuildings>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </ordnance>
    <healthAffectsPrice>false</healthAffectsPrice>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeability>Sellable</tradeability>
    <techLevel>Spacer</techLevel>
  </ThingDef>

  <ThingDef Name="EccentricDefenseGrid_BaseMakeableOrdnance" ParentName="EccentricDefenseGrid_BaseOrdnance" Abstract="True">
    <recipeMaker>
      <workSkill>Crafting</workSkill>
      <workAmount>2000</workAmount>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <li>FabricationBench</li>
        <li MayRequire="Aelanna.EccentricTech.Core">EccentricNanoassembler</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <researchPrerequisite>Eccentric_DefenseGridArtillery</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

  <!-- M36 PGM (high explosive) -->
  <ThingDef ParentName="EccentricDefenseGrid_BaseMakeableOrdnance" Class="EccentricDefenseGrid.OrdnanceDef">
    <defName>EccentricDefenseGrid_Ordnance_M36PGM</defName>
    <label>M36 PGM (high explosive)</label>
    <labelShort>M36 HE</labelShort>
    <description>A precision-guided short-range anti-ground missile with a high-explosive warhead.\n\nIt is designed to be loaded into vertical missile launchers on military-grade starships and requires a guidance lock to fire.</description>
    <uiOrder>100</uiOrder>
    <graphicData>
      <texPath>Eccentric/Things/Items/Ordnance_M36_Red</texPath>
    </graphicData>
    <statBases>
      <MarketValue>300</MarketValue>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <Chemfuel>20</Chemfuel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <ordnance>
      <projectile>EccentricDefenseGrid_Projectile_M36PGM</projectile>
      <effectRadius>4.9</effectRadius>
      <uiColor>(191,69,53)</uiColor>
    </ordnance>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
  </ThingDef>

