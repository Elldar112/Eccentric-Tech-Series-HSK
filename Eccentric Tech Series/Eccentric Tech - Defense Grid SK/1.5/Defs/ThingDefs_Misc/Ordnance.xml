    <defName>EccentricDefenseGrid_Ordnance_M38PGM</defName>
    <label>M38 PGM (incendiary)</label>
    <labelShort>M38 Incendiary</labelShort>
    <description>A precision-guided short-range anti-ground missile with a volatile incendiary warhead.\n\nIt is designed to be loaded into vertical missile launchers on military-grade starships and requires a guidance lock to fire.</description>
    <uiOrder>200</uiOrder>
    <graphicData>
      <texPath>Eccentric/Things/Items/Ordnance_M38_Orange</texPath>
    </graphicData>
    <statBases>
      <MarketValue>325</MarketValue>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <Chemfuel>40</Chemfuel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <ordnance>
      <projectile>EccentricDefenseGrid_Projectile_M38PGM</projectile>
      <effectRadius>4.9</effectRadius>
      <uiColor>(239,175,91)</uiColor>
    </ordnance>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
  </ThingDef>

  <!-- M39 PGM (EMP) -->
  <ThingDef ParentName="EccentricDefenseGrid_BaseMakeableOrdnance" Class="EccentricDefenseGrid.OrdnanceDef">
