        </shutdownEffects>
        <interceptEffectDrawOffset>(0,0,0.3)</interceptEffectDrawOffset>
        <interceptEffectRotatedDrawOffset>(0,0,0.7)</interceptEffectRotatedDrawOffset>
        <interceptEffects>
          <li>Eccentric_ShieldInterceptFlashBase</li>
          <li>Eccentric_ShieldInterceptFlashCore</li>
          <li>Eccentric_ShieldInterceptTrailBase</li>
          <li>Eccentric_ShieldInterceptTrailCore</li>
          <li>Eccentric_ShieldInterceptPulseBase</li>
          <li>Eccentric_ShieldInterceptPulseCore</li>
        </interceptEffects>
      </li>
      <li Class="EccentricDefenseGrid.CompProperties_ProjectorOverlay">
        <baseRingPath>Eccentric/Things/Buildings/ShieldProjector_Ring</baseRingPath>
        <activeRingPath>Eccentric/Things/Buildings/ShieldProjector_RingWhite</activeRingPath>
        <activeRingGlowPath>Eccentric/Things/Buildings/ShieldProjector_RingGlow</activeRingGlowPath>
        <glowRingPath>Eccentric/Things/Buildings/ShieldProjector_Glow</glowRingPath>
        <casingPath>Eccentric/Things/Buildings/ShieldProjector_Shell</casingPath>
        <pylonPath>Eccentric/Things/Buildings/ShieldProjector_Pylon</pylonPath>
