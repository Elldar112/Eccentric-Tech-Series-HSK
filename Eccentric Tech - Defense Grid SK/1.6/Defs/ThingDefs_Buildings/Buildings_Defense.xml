<Defs>

  <!-- Shield generator -->
  <ThingDef ParentName="Eccentric_DefenseGridBuildingBase">
    <defName>Eccentric_ShieldGenerator</defName>
    <label>shield generator</label>
    <description>A military-grade centralized shield generator unit designed to work with linked projectors.\n\nThis device cannot intercept projectiles on its own, but must be connected to shield projectors and shield capacitors via a defense grid network. Intercepting projectiles will also generate a large amount of heat, which must be dissipated in heatsinks.</description>
    <drawerType>MapMeshAndRealTime</drawerType>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Eccentric/Things/Buildings/ShieldGenerator_Base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4,4)</drawSize>
      <shadowData>
        <volume>(2.93,1,2.69)</volume>
        <offset>(-0.03,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(3,3)</size>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <costList>
      <Steel>100</Steel>
      <Plasteel>100</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
      <Eccentric_HighEnergyShieldCore>1</Eccentric_HighEnergyShieldCore>
    </costList>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(159,248,255,0)</glowColor>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>800</basePowerConsumption>
        <shortCircuitInRain>false</shortCircuitInRain>
      </li>
      <li Class="EccentricDefenseGrid.CompProperties_DefenseConduit" />
      <li Class="EccentricDefenseGrid.CompProperties_DefenseGenerator">
        <maxEnergyDrain>50</maxEnergyDrain>
      </li>
      <li Class="EccentricDefenseGrid.CompProperties_GeneratorOverlay" />
    </comps>
    <researchPrerequisites>
      <li>Eccentric_DefenseGridShields</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
  </ThingDef>

  <!-- Shield projector (interceptor source) -->
