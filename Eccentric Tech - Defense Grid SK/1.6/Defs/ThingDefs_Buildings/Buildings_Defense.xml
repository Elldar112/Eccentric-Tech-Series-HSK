    </comps>
    <placeWorkers>
      <li>EccentricDefenseGrid.PlaceWorker_DefenseProjector</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>Eccentric_DefenseGridShields</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
  </ThingDef>

