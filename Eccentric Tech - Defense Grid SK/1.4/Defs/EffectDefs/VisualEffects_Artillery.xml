<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Launch smoke -->
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_ArtilleryLauncherSmokeRing</defName>
    <type>Particle</type>
    <priority>Medium</priority>
    <materialPaths>
      <li>Eccentric/Effects/Launch_SmokeRingA</li>
      <li>Eccentric/Effects/Launch_SmokeRingB</li>
    </materialPaths>
    <shaderType>Transparent</shaderType>
    <altitude>PawnRope</altitude>
    <altitudeAdjustment>2</altitudeAdjustment>
    <opacity>1.0</opacity>
    <duration>60</duration>
    <drawSize>(3,0,3)</drawSize>
    <rotationOffset>-180~180</rotationOffset>
    <attachToOrigin>true</attachToOrigin>
    <sizeFunction>EaseOutCubic</sizeFunction>
    <opacityFunction>FadeOutCubic</opacityFunction>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_ArtilleryLauncherSmokePuff</defName>
    <type>Drifter</type>
    <priority>Medium</priority>
    <materialPaths>
      <li>Eccentric/Effects/Launch_SmokePuffA</li>
      <li>Eccentric/Effects/Launch_SmokePuffB</li>
      <li>Eccentric/Effects/Launch_SmokePuffC</li>
    </materialPaths>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>MoteOverheadLow</altitude>
    <drawSize>(1,0,1)</drawSize>
    <sizeRange>0.8~1.2</sizeRange>
    <count>3</count>
    <duration>75</duration>
    <distance>0.2~1.6</distance>
    <rotationRate>-6~6</rotationRate>
    <applyRotationToDrawOffset>false</applyRotationToDrawOffset>
    <sizeFunction>FadeOutQuad</sizeFunction>
    <opacity>1.0</opacity>
    <opacityFunction>FadeOutCubic</opacityFunction>
  </EccentricProjectiles.EffectDef>

  <!-- Impact shockwave -->
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_ArtilleryImpactDistortion</defName>
    <type>Particle</type>
    <priority>Low</priority>
    <materialPath>Eccentric/Effects/DistortionRing</materialPath>
    <shaderType>MotePsychicConditionCauser</shaderType>
    <shaderParameters>
      <_distortionIntensity>0.015</_distortionIntensity>
      <_brightnessMultiplier>1.1</_brightnessMultiplier>
      <_distortionScale>40</_distortionScale>
    </shaderParameters>
    <altitude>MoteOverhead</altitude>
    <opacity>1.0</opacity>
    <duration>12</duration>
    <drawSize>(26,0,26)</drawSize>
    <sizeFunction>EaseOutCubic</sizeFunction>
    <opacityFunction>FadeOutCubic</opacityFunction>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_ArtilleryImpactImplosion</defName>
    <type>Particle</type>
    <priority>Low</priority>
    <materialPath>Eccentric/Effects/DistortionBubble</materialPath>
    <shaderType>MotePsychicConditionCauser</shaderType>
    <shaderParameters>
      <_distortionIntensity>0.015</_distortionIntensity>
      <_brightnessMultiplier>1.1</_brightnessMultiplier>
      <_distortionScale>40</_distortionScale>
    </shaderParameters>
    <altitude>MoteOverhead</altitude>
    <opacity>1.0</opacity>
    <duration>18</duration>
    <drawSize>(30,0,30)</drawSize>
    <minSize>0.3</minSize>
    <progressFunction>EaseInCubic</progressFunction>
    <sizeFunction>InverseSine</sizeFunction>
    <opacityFunction>Sine</opacityFunction>
  </EccentricProjectiles.EffectDef>

  <!-- Missile effects -->
  <EccentricProjectiles.EffectDef Name="Eccentric_BaseArtilleryExhaust" Abstract="True">
    <type>Particle</type>
    <priority>Medium</priority>
    <materialPath>Eccentric/Effects/Exhaust_Missile</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>PawnRope</altitude>
    <altitudeAdjustment>3</altitudeAdjustment>
    <opacity>1.0</opacity>
    <duration>1</duration>
    <attachToParent>true</attachToParent>
    <sizeFunction>None</sizeFunction>
    <opacityFunction>None</opacityFunction>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef Name="Eccentric_BaseArtilleryTrail" Abstract="True">
    <type>Trail</type>
    <priority>Medium</priority>
    <materialPath>Eccentric/Effects/Trail_White</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>PawnRope</altitude>
    <altitudeAdjustment>1</altitudeAdjustment>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef Name="Eccentric_BaseArtillerySmoke" Abstract="True">
    <type>Particle</type>
    <priority>Medium</priority>
    <materialPaths>
      <li>Eccentric/Effects/Launch_SmokePuffA</li>
      <li>Eccentric/Effects/Launch_SmokePuffB</li>
      <li>Eccentric/Effects/Launch_SmokePuffC</li>
    </materialPaths>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>PawnRope</altitude>
    <altitudeAdjustment>2</altitudeAdjustment>
    <drawSize>(1,0,1)</drawSize>
    <sizeRange>0.8~1.2</sizeRange>
    <duration>60</duration>
    <distance>0.2~1.6</distance>
    <rotationOffset>-180~180</rotationOffset>
    <sizeFunction>Burst</sizeFunction>
    <opacity>1.0</opacity>
    <opacityFunction>FadeOutQuad</opacityFunction>
  </EccentricProjectiles.EffectDef>

