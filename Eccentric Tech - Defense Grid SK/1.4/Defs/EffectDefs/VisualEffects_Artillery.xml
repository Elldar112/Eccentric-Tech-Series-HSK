  <!-- Laser designator -->
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_DefenseGridLaserLine</defName>
    <type>Trail</type>
    <priority>High</priority>
    <materialPath>Eccentric/Effects/Line_LaserDesignator</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>MoteOverhead</altitude>
    <altitudeAdjustment>0</altitudeAdjustment>
    <drawOffset>(0,0,0.8)</drawOffset>
    <destinationDrawOffset>(0,0,-0.25)</destinationDrawOffset>
    <size>0.08</size>
    <interval>6</interval>
    <duration>6</duration>
    <sizeFunction>None</sizeFunction>
    <opacity>0.6</opacity>
    <opacityFunction>Sine</opacityFunction>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_DefenseGridLaserPulse</defName>
    <type>Particle</type>
    <priority>Critical</priority>
    <materialPath>Eccentric/Effects/Pulse_LaserDesignator</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>MoteOverhead</altitude>
    <altitudeAdjustment>1</altitudeAdjustment>
    <attachToTarget>true</attachToTarget>
    <attachPersistently>false</attachPersistently>
    <drawSize>(1,0,1)</drawSize>
    <interval>6</interval>
    <duration>6</duration>
    <sizeFunction>None</sizeFunction>
    <minOpacity>0.3</minOpacity>
    <opacityFunction>Sine</opacityFunction>
  </EccentricProjectiles.EffectDef>

  <!-- Heat wave -->
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_DefenseGridHeatDistortion</defName>
