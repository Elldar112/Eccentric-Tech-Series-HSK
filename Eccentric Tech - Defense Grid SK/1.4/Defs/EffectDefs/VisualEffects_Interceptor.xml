<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Shield startup -->
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_ShieldBubbleStartPulse</defName>
    <type>Particle</type>
    <priority>High</priority>
    <materialPath>Eccentric/Effects/ShieldBubble_StartPulse</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>MoteOverhead</altitude>
    <drawSize>(1, 0, 1)</drawSize>
    <duration>75</duration>
    <rotationOffset>-180~180</rotationOffset>
    <attachToParent>true</attachToParent>
    <minSize>0.7</minSize>
    <scaleSizeWithParent>true</scaleSizeWithParent>
    <sizeFunction>FadeOutQuad</sizeFunction>
    <opacityFunction>ReverseBurst</opacityFunction>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_ShieldBubbleStartRing</defName>
    <type>Particle</type>
    <priority>High</priority>
    <materialPath>Eccentric/Effects/ShieldBubble_StartRing</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>MoteOverhead</altitude>
    <drawSize>(2, 0, 2)</drawSize>
    <duration>60</duration>
    <rotationOffset>-180~180</rotationOffset>
    <attachToParent>true</attachToParent>
    <minSize>0.5</minSize>
    <scaleSizeWithParent>true</scaleSizeWithParent>
    <sizeFunction>FadeOutQuad</sizeFunction>
    <opacityFunction>ReverseBurst</opacityFunction>
  </EccentricProjectiles.EffectDef>

  <!-- Shield interception effects -->
  <EccentricProjectiles.EffectDef Name="Eccentric_ShieldInterceptTrail">
    <defName>Eccentric_ShieldInterceptTrail</defName>
    <type>Trail</type>
    <priority>Medium</priority>
    <materialPath>Eccentric/Effects/Shield-InterceptorBeam</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>MoteOverhead</altitude>
    <size>0.08</size>
    <duration>15</duration>
    <attachToOrigin>true</attachToOrigin>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef ParentName="Eccentric_ShieldInterceptTrail">
    <defName>Eccentric_ShieldInterceptTrailBase</defName>
    <materialPath>Eccentric/Effects/Shield-InterceptorBeamBase</materialPath>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef ParentName="Eccentric_ShieldInterceptTrail">
    <defName>Eccentric_ShieldInterceptTrailCore</defName>
    <materialPath>Eccentric/Effects/Shield-InterceptorBeamGlow</materialPath>
    <altitudeAdjustment>3</altitudeAdjustment>
    <useColorOverride>false</useColorOverride>
  </EccentricProjectiles.EffectDef>

  <EccentricProjectiles.EffectDef Name="Eccentric_ShieldInterceptFlash">
    <defName>Eccentric_ShieldInterceptFlash</defName>
    <type>Muzzle</type>
    <priority>Medium</priority>
    <materialPath>Eccentric/Effects/Shield-InterceptorFlash</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>MoteOverhead</altitude>
    <altitudeAdjustment>1</altitudeAdjustment>
    <opacity>1.0</opacity>
    <duration>12</duration>
    <attachToOrigin>true</attachToOrigin>
    <drawSize>(1,0,1)</drawSize>
    <drawOffset>(0,0,0.6)</drawOffset>
    <sizeRange>1.0~1.2</sizeRange>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef ParentName="Eccentric_ShieldInterceptFlash">
    <defName>Eccentric_ShieldInterceptFlashBase</defName>
    <materialPath>Eccentric/Effects/Shield-InterceptorFlashBase</materialPath>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef ParentName="Eccentric_ShieldInterceptFlash">
    <defName>Eccentric_ShieldInterceptFlashCore</defName>
    <materialPath>Eccentric/Effects/Shield-InterceptorFlashGlow</materialPath>
    <altitudeAdjustment>4</altitudeAdjustment>
    <useColorOverride>false</useColorOverride>
  </EccentricProjectiles.EffectDef>

  <EccentricProjectiles.EffectDef Name="Eccentric_ShieldInterceptPulse">
    <defName>Eccentric_ShieldInterceptPulse</defName>
    <type>Particle</type>
    <priority>High</priority>
    <materialPath>Eccentric/Effects/Shield-ImpactPulse</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>MoteOverhead</altitude>
    <altitudeAdjustment>2</altitudeAdjustment>
    <drawSize>(10, 0, 5)</drawSize>
    <duration>18</duration>
    <attachToTarget>true</attachToTarget>
    <attachPersistently>false</attachPersistently>
    <opacityFunction>FadeOutCubic</opacityFunction>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef ParentName="Eccentric_ShieldInterceptPulse">
    <defName>Eccentric_ShieldInterceptPulseBase</defName>
    <materialPath>Eccentric/Effects/Shield-ImpactPulseBase</materialPath>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef ParentName="Eccentric_ShieldInterceptPulse">
    <defName>Eccentric_ShieldInterceptPulseCore</defName>
    <materialPath>Eccentric/Effects/Shield-ImpactPulseGlow</materialPath>
    <altitudeAdjustment>5</altitudeAdjustment>
    <useColorOverride>false</useColorOverride>
  </EccentricProjectiles.EffectDef>

  <!-- Shield break effects -->
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_ShieldBubble_BreakPulse</defName>
    <type>Particle</type>
    <priority>Critical</priority>
    <materialPath>Eccentric/Effects/ShieldBubble-Bright</materialPath>
    <shaderType>TransparentPostLight</shaderType>
    <altitude>MoteOverhead</altitude>
    <drawSize>(2, 0, 2)</drawSize>
    <duration>36</duration>
    <rotationOffset>-180~180</rotationOffset>
    <scaleSizeWithParent>true</scaleSizeWithParent>
    <attachToParent>true</attachToParent>
    <opacityFunction>FadeOutCubic</opacityFunction>
  </EccentricProjectiles.EffectDef>
  <EccentricProjectiles.EffectDef>
    <defName>Eccentric_ShieldBubble_BreakDrifters</defName>
    <type>Drifter</type>
    <priority>Low</priority>
    <materialPaths>
      <li>Eccentric/Effects/ShieldBubble-Fragment1</li>
      <li>Eccentric/Effects/ShieldBubble-Fragment2</li>
      <li>Eccentric/Effects/ShieldBubble-Fragment3</li>
    </materialPaths>

    <altitude>MoteOverhead</altitude>
    <altitudeAdjustment>2</altitudeAdjustment>
    <shaderType>TransparentPostLight</shaderType>
    <count>16</count>
    <duration>45~75</duration>

    <sizeRange>0.04~0.12</sizeRange>
    <minSize>0.005</minSize>
    <scaleSizeWithParent>true</scaleSizeWithParent>

    <startingDistance>0.95</startingDistance>
    <distance>1.1~1.3</distance>
    <scaleDistanceWithParent>true</scaleDistanceWithParent>

    <rotationOffset>-180~180</rotationOffset>
    <rotationRate>-12~12</rotationRate>

    <sizeFunction>FadeOutQuad</sizeFunction>
    <opacityFunction>FadeOutCubic</opacityFunction>
    <pathingFunction>EaseOutQuad</pathingFunction>
  </EccentricProjectiles.EffectDef>

</Defs>
